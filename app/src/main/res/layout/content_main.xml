<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="main.view.MainActivity"
    android:background="#f5f5f5"
    android:fitsSystemWindows="true"
    tools:showIn="@layout/app_bar_main">


    <com.example.abc.kantu.MyViewPager
        android:fitsSystemWindows="true"
        android:id="@+id/vp_viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        />

    <com.flyco.tablayout.CommonTabLayout
        android:fitsSystemWindows="true"
        android:id="@+id/tl_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:tl_textsize="12sp"
        app:tl_iconMargin="1dp"
        app:tl_iconWidth="25dp"
        app:tl_iconHeight="25dp"
        android:layout_weight="1"
        app:tl_indicator_height="0dp"
        app:tl_indicator_anim_enable="true"
        app:tl_iconGravity="TOP"
        app:tl_textSelectColor="@color/colorAccent"
        app:tl_textUnselectColor="#808080"
        />






</LinearLayout>